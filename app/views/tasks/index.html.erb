<h1>Deeds to be done</h1>

<%= link_to 'New Deed', new_task_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Due Date</th>
    <th>Done</th>
    <th></th>
  </tr>

  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.due_date %></td>
      <td><%= task.completed %></td>
      <td><%= link_to 'Show Deed', task_path(task) %></td>
      <td><%= link_to 'Edit Deed', edit_task_path(task) %></td>
      <td><%= link_to 'Destroy Deed', task_path(task),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>